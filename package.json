{
  "name": "analytical-testing-lab",
  "version": "1.0.0",
  "description": "Analytical Testing Laboratory Website",
  "main": "server/index.js",
  "scripts": {
    "install": "npm ci && cd client && npm ci",
    "build": "cd client && npm run build",
    "start": "node server/index.js",
    "dev": "concurrently \"cd server && npm run dev\" \"cd client && npm start\"",
    "install-server": "cd server && npm install",
    "install-client": "cd client && npm install",
    "install-functions": "cd netlify/functions && npm install",
    "setup": "npm run install-server && npm run install-client && npm run install-functions",
    "docker-install": "npm run install-server && npm run install-client",
    "heroku-postbuild": "npm run build",
    "netlify-build": "npm run install-client && cd client && npm run build",
    "render-build": "npm install && npm run install-server && npm run install-client && npm run build",
    "render-start": "node start-server.js",
    "render-start-direct": "node server/index.js",
    "render-start-absolute": "node /opt/render/project/src/server/index.js",
    "render-start-fallback": "cd server && node index.js",
    "render-debug": "NODE_DEBUG=http,net,stream node start-server.js"
  },
  "engines": {
    "node": ">=18 <19"
  },
  "cacheDirectories": ["client/node_modules", "server/node_modules"],
  "dependencies": {
    "concurrently": "^8.0.1",
    "cross-env": "^7.0.3",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "image-size": "^1.2.1",
    "jsonwebtoken": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.2.0",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "pg-cloudflare": "^1.2.7",
    "pg-connection-string": "^2.9.1",
    "pg-pool": "^3.10.1",
    "pg-protocol": "^1.10.3",
    "pg-types": "^2.2.0",
    "pgpass": "^1.0.5",
    "sequelize": "^6.30.0",
    "serverless-http": "^3.2.0",
    "slugify": "^1.6.6",
    "sqlite3": "^5.1.7"
  }
}
